<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/debateFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2323f7"
    android:clickable="true"
    android:focusable="true"
    tools:context=".DebateFragment">

    <TextView
        android:id="@+id/questionText"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Generating question..."
        android:textSize="45sp"
        android:textAlignment="center"
        android:fontFamily="@font/rakkas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/playerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Player 1: Generating side..."
        android:textSize="25sp"
        android:textAlignment="center"
        android:fontFamily="@font/rakkas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionText"/>
    <TextView
        android:id="@+id/roundText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:text="Opening Statement"
        android:textSize="45sp"
        android:textAlignment="center"
        android:fontFamily="@font/rakkas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerText"/>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:text="1:00"
        android:textSize="100sp"
        android:textAlignment="center"
        android:fontFamily="@font/rakkas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundText"/>

    <Button
        android:id="@+id/nextRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Next Round"
        android:visibility="gone"
        android:fontFamily="@font/mplus"
        android:backgroundTint="#0404cf"
        android:textSize="45sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>