<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/readyFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2323f7"
    android:clickable="true"
    android:focusable="true"
    tools:context=".ReadyFragment">

    <TextView
        android:id="@+id/readyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/getReady"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="50sp"
        android:textAlignment="center"
        android:fontFamily="@font/rakkas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="200sp"
        android:text="0"
        android:fontFamily="@font/rakkas"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/readyText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>