<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/endFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2323f7"
    android:clickable="true"
    android:focusable="true"
    tools:context=".EndFragment">

    <TextView
        android:id="@+id/finalQuestionText"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Generating question..."
        android:textSize="45sp"
        android:textAlignment="center"
        android:fontFamily="@font/rakkas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/player1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Player 1: Generating side..."
        android:textSize="25sp"
        android:textAlignment="center"
        android:fontFamily="@font/rakkas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finalQuestionText"/>
    <TextView
        android:id="@+id/player2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Player 2: Generating side..."
        android:textSize="25sp"
        android:textAlignment="center"
        android:fontFamily="@font/rakkas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1Text"/>
    <TextView
        android:id="@+id/whoWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:text="Who Won!"
        android:textSize="45sp"
        android:textAlignment="center"
        android:fontFamily="@font/rakkas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player2Text"/>
    <Button
        android:id="@+id/player1Win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whoWon"
        android:text="Player 1"
        android:fontFamily="@font/mplus"
        android:backgroundTint="#0404cf"
        android:textSize="25sp"/>
    <Button
        android:id="@+id/player2Win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whoWon"
        android:text="Player 2"
        android:fontFamily="@font/mplus"
        android:backgroundTint="#0404cf"
        android:textSize="25sp"/>
    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player2Win"
        android:text="Home"
        android:visibility="gone"
        android:fontFamily="@font/mplus"
        android:backgroundTint="#0404cf"
        android:textSize="25sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>